<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.kawakp.kp.application">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".app.KawakpApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<service android:name="com.kawakp.kp.kernel.plc.siemens.SiemensService"/>

		<activity
			android:configChanges="keyboardHidden|orientation|screenSize|locale|screenLayout|mcc|mnc"
			android:name=".ui.StartActivity"
			android:theme="@style/Theme.Launch"
			android:launchMode="singleTask"
			android:clearTaskOnLaunch="true">
			<intent-filter android:priority="2">
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation|screenSize|locale|screenLayout|mcc|mnc"
			android:launchMode="singleTask"
			android:name=".ui.MainActivity"/>
		<activity
			android:name=".ui.activity.demo.DemoActivity"
			android:configChanges="keyboardHidden|orientation|screenSize|locale|screenLayout|mcc|mnc"/>
	</application>

</manifest>