<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_search_margin_top"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="@dimen/form_search_width"
                android:layout_height="@dimen/form_search_height"
                android:gravity="center"
                android:background="@drawable/search_select"
                android:textColor="@color/colorFormSelect"
                android:textSize="@dimen/form_search_text_size"
                android:text="@string/form_search_start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/form_search_height"
                android:layout_marginLeft="@dimen/form_search_space"
                android:gravity="center"
                android:textColor="@color/colorFormTo"
                android:textSize="@dimen/form_search_text_size"
                android:text="至"/>

            <TextView
                android:layout_width="@dimen/form_search_width"
                android:layout_height="@dimen/form_search_height"
                android:layout_marginLeft="@dimen/form_search_space"
                android:gravity="center"
                android:background="@drawable/search_select"
                android:textColor="@color/colorFormSelect"
                android:textSize="@dimen/form_search_text_size"
                android:text="@string/form_search_end"/>

            <TextView
                android:layout_width="@dimen/form_search_width"
                android:layout_height="@dimen/form_search_height"
                android:layout_marginLeft="@dimen/form_search_btn_margin_left"
                android:gravity="center"
                android:background="@drawable/search_btn"
                android:textColor="@color/colorFormSearch"
                android:textSize="@dimen/form_search_text_size"
                android:text="@string/form_search"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:layout_marginTop="@dimen/form_title_margin_top"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/form_border"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorFormSelect"
                    android:textSize="@dimen/form_search_text_size"
                    android:text="@string/form_search_start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorFormSelect"
                    android:textSize="@dimen/form_search_text_size"
                    android:text="一次供压"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorFormSelect"
                    android:textSize="@dimen/form_search_text_size"
                    android:text="二次供压"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorFormSelect"
                    android:textSize="@dimen/form_search_text_size"
                    android:text="一次供水"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorFormSelect"
                    android:textSize="@dimen/form_search_text_size"
                    android:text="二次供水"/>

            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#999999"/>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/data_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</layout>