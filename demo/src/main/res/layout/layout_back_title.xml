<?xml version="1.0" encoding="utf-8"?>
<layout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height"
		android:orientation="horizontal"
		android:background="@color/colorTitleBg"
		android:gravity="center_vertical"
		>

		<ImageView
			android:id="@+id/back"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/title_project_margin_left"
			android:paddingRight="@dimen/title_project_margin_left"
			android:rotation="90"
			android:src="@drawable/icon_down"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="right"
			android:layout_marginRight="@dimen/title_user_margin_right"
			android:textColor="@color/colorText"
			android:text="@string/user_name"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/title_user_margin_right"
			android:src="@drawable/icon_user"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/title_arrow_margin_right"
			android:src="@drawable/icon_down"/>

	</LinearLayout>

</layout>