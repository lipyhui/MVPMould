<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="item"
			type="com.kawakp.kp.application.bean.FormItem"/>
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:background="@{item.bg ? @color/colorFormBgOne:@color/colorFormBgTwo}"
		android:gravity="center"
		android:orientation="horizontal"
	>

		<TextView
			android:layout_width="151dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textColor="@color/colorFormTo"
			android:textSize="14dp"
			android:text="@{item.time}"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#999999"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/colorFormTo"
			android:textSize="14dp"
			android:text="@{item.oneP}"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#999999"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/colorFormTo"
			android:textSize="14dp"
			android:text="@{item.twoP}"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#999999"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/colorFormTo"
			android:textSize="14dp"
			android:text="@{item.oneW}"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#999999"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/colorFormTo"
			android:textSize="14dp"
			android:text="@{item.twoW}"/>

	</LinearLayout>

</layout>